<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:paddingEnd="@dimen/activity_horizontal_margin">

        <!-- Photo -->
        <com.vestrel00.contacts.sample.view.PhotoView
            android:id="@+id/photoView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/contact_detail_photo_height"
            android:contentDescription="@string/contact_details_photo"
            android:scaleType="fitCenter"
            android:src="@drawable/placeholder_photo" />

        <!-- Name -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:text="@string/contact_details_name_label"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large" />

        <EditText
            android:id="@+id/namePrefixField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:hint="@string/contact_details_name_prefix_hint"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/firstNameField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:hint="@string/contact_details_name_first_hint"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/middleNameField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:hint="@string/contact_details_name_middle_hint"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/lastNameField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:hint="@string/contact_details_name_last_hint"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/nameSuffixField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:hint="@string/contact_details_name_suffix_hint"
            android:inputType="textPersonName" />

        <!-- Phone -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:text="@string/contact_details_phone_label"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large" />

        <com.vestrel00.contacts.ui.view.PhonesView
            android:id="@+id/phonesView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:orientation="vertical" />

    </LinearLayout>
</ScrollView>